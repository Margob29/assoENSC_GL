@model IEnumerable<ENSC.Models.Role>

@{
    ViewData["Title"] = "Roles";
}

<h1 class="text-center">Rôles</h1>
<h1 class="text-center"><a class="btn btn-outline-secondary col-6" asp-area="" asp-controller="Role"
        asp-action="Create">Créer un
        rôle</a></h1>
<hr />
<div class="row justify-content-center">
    @foreach (var item in Model)
    {
        <div class="col-3">
            <div class="card border-dark">
                <div class="card-header bg-ENSC text-center text-white fw-bold fs-4">
                    @Html.DisplayFor(modelItem => item.Name)
                </div>
                <div class="card-body">
                    <div class="row">
                        @Html.DisplayFor(modelItem => item.Description)
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a class="btn btn-outline-warning col-6" asp-controller="Role" asp-action="Delete"
                    asp-route-id="@item.Id">Supprimer</a>
                </div>
            </div>
        </div>
    }

</div>