@model ENSC.Models.Role

@{
    ViewData["Title"] = "Delete";
}
<div class="mx-auto d-flex flex-column align-items-center text-center">
    <h2 class="purple" style="width: 50%;">Confirmation de suppression d'un rôle</h2>

    <hr />

    <form method="post" action="/Event/DeleteEvent">
        <div class="form-group">
            Etes-vous sûrs de vouloir supprimer le rôle @Model.Name ? <br />
        </div>
        <br />
        <a class="btn btn-outline-warning" asp-area="" asp-controller="Role" asp-action="DeleteRole"
            asp-route-id="@Model.Id">Supprimer</a>
        <a class="btn btn-outline-secondary" asp-area="" asp-controller="Role" asp-action="Index">Annuler</a>
    </form>
</div>